@model IEnumerable<TiErp.Application.ProductionItem.DTOs.ProductionItemDto>

@{
    ViewData["Title"] = "Lista";
}

<h1>Lista elementów produkcyjnych</h1>

<p>
    <a asp-action="Create">Dodaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nazwa
            </th>
            <th>
                EAN13
            </th>
            <th>
                Ilość na magazynie
            </th>
            <th>
                Kod lok.
            </th>
            <th>
                Utworzył
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EAN13)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WareHouseLocationCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy.UserName)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new {  id=item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
