@{
    @using System.Security.Principal

    <ul class="navbar-nav fit-content mb-2">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://github.com/tobiaszizydor.png" alt="" width="32" height="32" class="rounded-circle me-2">
                    <span class="link-text">@User.Identity?.Name!</span>
                </a>
                <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2" style="">
                    <li><a class="dropdown-item" href="/Identity/Account/Manage">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/Identity/Account/Logout">Sign out</a></li>
                </ul>
            </div>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/LoginCard">Zaloguj za pomocą karty</a>
            </li>
        }
    </ul>
}
