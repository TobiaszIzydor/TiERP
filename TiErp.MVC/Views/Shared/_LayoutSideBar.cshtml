<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TiErp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,200,0,0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TiErp.MVC.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100 mb-0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TiErp</a>
                
            </div>
        </nav>
    </header>
    <div class="container-fluid d-flex flex-grow-1 p-0">
        <aside class="d-flex flex-column flex-shrink-0 p-3 bg-light position-relative">
        <ul class="nav nav-pills flex-column mb-auto sidebar-overflow p-2" style="width:250px;">
            <li class="nav-item">
                    <button class="btn btn-toggle d-flex align-items-center rounded">
                        <span class="toggle-size material-symbols-outlined me-1">
                            home
                        </span>
                        <span class="link-text">Home</span>
                    </button>
            </li>
             <li class="nav-item">
                <button class="btn btn-toggle d-flex align-items-center rounded" data-bs-toggle="collapse" data-bs-target="#employees-collapse" aria-expanded="true">
                        <span class="toggle-size material-symbols-outlined  me-1">
                            business_center
                        </span>
                        <span class="link-text">Employees</span>
                </button>
                    <div class="collapse" id="employees-collapse" style="">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small pl-28p">
                        <li><a href="/Employee/Create" class="nav-link link-dark rounded">Create</a></li>
                        <li><a href="/Employee" class="nav-link link-dark rounded">List</a></li>
                    </ul>
                </div>
            </li>
             <li class="nav-item">
                    <button class="btn btn-toggle d-flex align-items-center rounded" data-bs-toggle="collapse" data-bs-target="#orders-collapse" aria-expanded="true">
                        <span class="toggle-size material-symbols-outlined me-1">
                            package_2
                        </span>
                        <span class="link-text">Orders</span>
                </button>
                    <div class="collapse" id="orders-collapse" style="">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small pl-28p">
                        <li><a href="/Order/Create" class="nav-link link-dark rounded">Create</a></li>
                        <li><a href="/Order" class="nav-link link-dark rounded">List</a></li>
                    </ul>
                </div>
            </li>
             <li class="nav-item">
                <button class="btn btn-toggle d-flex align-items-center rounded" data-bs-toggle="collapse" data-bs-target="#customers-collapse" aria-expanded="true">
                        <span class="toggle-size material-symbols-outlined me-1">
                            group
                        </span>
                        <span class="link-text">Customers</span>
                </button>
                    <div class="collapse" id="customers-collapse" style="">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small pl-28p">
                        <li><a href="/Customer/Create" class="nav-link link-dark rounded">Create</a></li>
                        <li><a href="/Customer" class="nav-link link-dark rounded">List</a></li>
                    </ul>
                </div>
            </li>
             <li class="nav-item">
                <button class="btn btn-toggle d-flex align-items-center rounded" data-bs-toggle="collapse" data-bs-target="#plines-collapse" aria-expanded="true">
                        <span class="toggle-size material-symbols-outlined me-1">
                            conveyor_belt
                        </span>
                        <span class="link-text">Production Lines</span>
                </button>
                <div class="collapse" id="plines-collapse" style="">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small pl-28p">
                        <li><a href="/ProductionLine/Create" class="nav-link link-dark rounded">Create</a></li>
                        <li><a href="/ProductionLine" class="nav-link link-dark rounded">List</a></li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <button class="btn btn-toggle d-flex align-items-center rounded" data-bs-toggle="collapse" data-bs-target="#products-collapse" aria-expanded="true">
                        <span class="toggle-size material-symbols-outlined me-1">
                            inventory_2
                        </span>
                        <span class="link-text">Products</span>
                </button>
                <div class="collapse" id="products-collapse" style="">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small pl-28p">
                        <li><a href="/Product/Create" class="nav-link link-dark rounded">Create</a></li>
                        <li><a href="/Product" class="nav-link link-dark rounded">List</a></li>
                    </ul>
                </div>
            </li>
                <li class="nav-item">
                    <button class="btn btn-toggle d-flex align-items-center rounded" data-bs-toggle="collapse" data-bs-target="#pitems-collapse" aria-expanded="true">
                        <span class="toggle-size material-symbols-outlined me-1">
                            category
                        </span>
                        <span class="link-text">Production items</span>
                    </button>
                    <div class="collapse" id="pitems-collapse" style="">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small pl-28p">
                            <li><a href="/ProductionItem/Create" class="nav-link link-dark rounded">Create</a></li>
                            <li><a href="/ProductionItem" class="nav-link link-dark rounded">List</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <button class="btn btn-toggle d-flex align-items-center rounded" data-bs-toggle="collapse" data-bs-target="#admin-collapse" aria-expanded="true">
                        <span class="toggle-size material-symbols-outlined me-1">
                            settings
                        </span>
                        <span class="link-text">Administration</span>
                    </button>
                    <div class="collapse" id="admin-collapse" style="">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small pl-28p">
                            <li><a href="/Role/Set" class="nav-link link-dark rounded">Assign role to user</a></li>
                            <li><a href="/Employee/AssignToUser" class="nav-link link-dark rounded">Assign user to employee</a></li>
                        </ul>
                    </div>
                </li>
        </ul>
        <partial name="_LoginPartialSideBar" />
            <button class="toggle-btn btn-sidebar btn bg-light p-0">
                <span class="material-symbols-outlined me-1 rotate">
                    chevron_left
                </span>
            </button>
    </aside>
    <div class="container">
        <main role="main" class="p-4">
            @RenderBody()
        </main>
    </div>
    </div>

    <footer class="bg-light border-top footer mt-auto text-muted">
        <div class="container p-4">
            &copy; 2025 - TiErp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
