@model IEnumerable<TiWms.Application.OrderItem.DTOs.OrderItemDto>

@{
    ViewData["Title"] = "Lista zamówionych produktów";
}

<h1>Lista zamówionych produktów</h1>

<p>
    <a asp-action="Create">Dodaj nowe</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Produkt
            </th>
            <th>
                Id zamówienia
            </th>
            <th>
                Ilość
            </th>
            <th>
                Status
            </th
            ><th>
                Linia prod.
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductionLine.Name)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new {  id=item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
