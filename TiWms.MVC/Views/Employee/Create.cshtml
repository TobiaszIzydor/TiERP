<h1>Dodaj pracownika</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Employee/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" for="FirstName">Imię:</label>
                <input class="form-control" type="text" id="FirstName" name="FirstName" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="LastName">Nazwisko:</label>
                <input class="form-control" type="text" id="LastName" name="LastName" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="HireDate">Data zatrudnienia:</label>
                <input class="form-control" type="date" value="@DateOnly.FromDateTime(DateTime.Now)" id="HireDate" name="HireDate" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="ContactInfo.Email">Email</label>
                <input class="form-control" type="text" id="ContactInfo.Email" name="ContactInfo.Email" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="ContactInfo.Phone">Numer tel.:</label>
                <input class="form-control" type="text" id="ContactInfo.Phone" name="ContactInfo.Phone" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="ContactInfo.EmergencyPhone">Numer tel. osoby do informacji:</label>
                <input class="form-control" type="text" id="ContactInfo.EmergencyPhone" name="ContactInfo.EmergencyPhone" />
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>